<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gestVehMaui.Pages.RegistrarNuevoUser"
             xmlns:progressBar="clr-namespace:Syncfusion.Maui.ProgressBar;assembly=Syncfusion.Maui.ProgressBar"
             Title="RegistrarNuevoUser">

    <ScrollView>
        
    
    <VerticalStackLayout Padding="15"
                         Spacing="25">
        <Label Text="Nombre:" />
        <Entry x:Name="NombreEntry" Placeholder="Ingrese su nombre" />

        <Label Text="Email:" />
        <Entry x:Name="EmailEntry" Placeholder="Ingrese su email" Keyboard="Email" />

        <Label Text="Contrase単a:" />
        <Entry x:Name="PasswordEntry" Placeholder="Ingrese su contrase単a" IsPassword="True" />

        <Label Text="Confirmar Contrase単a:" />
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirme su contrase単a" IsPassword="True" />

        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Registrar" Clicked="OnRegistrarClicked" Margin="0,20,0,0" />
            <Button Text="Regresar" Clicked="OnRegresarClicked" Margin="10,20,0,0" />
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center">
            <Label x:Name="ResultadoLabel"
                   Text=""
                   Margin="0,10,0,0"
                   TextColor="Red"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"/>

            <progressBar:SfCircularProgressBar 
                   IsIndeterminate="True"
                   x:Name="pgbEspera"
                   IsVisible="False"
                   WidthRequest="50"
                   HeightRequest="50" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>